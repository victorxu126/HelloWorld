<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">  
    <item android:state_pressed="true" >       
      <layer-list >
          <!-- 阴影部分 -->
		    <!-- top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
		    <item
		        android:bottom="3dp"
		        android:right="2dp"
		        >
		        <shape android:shape="rectangle" >
		 
		            <gradient
		                android:angle="270"
		 
		                android:endColor="#8045e8e8"
		                android:startColor="#8045e8e8" />
		 
		            <corners
		                android:bottomLeftRadius="6dip"
		                android:bottomRightRadius="6dip"
		                android:topLeftRadius="6dip"
		                android:topRightRadius="6dip" />
		        </shape>
		    </item>
 
		    <!-- 表面部分 -->
		    <!-- bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
		    <item
		        android:left="2dp"
		        android:top="2dp">
		        <shape android:shape="rectangle" >
		 
		            <gradient
		                android:angle="270"
		                android:endColor="#191970"
		                android:startColor="#20b2aa" />
		 
		            <corners
		                android:bottomLeftRadius="6dip"
		                android:bottomRightRadius="6dip"
		                android:topLeftRadius="6dip"
		                android:topRightRadius="6dip" />
		        </shape>
		    </item>
      </layer-list>
    </item>
    
    <item >
		<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
